{
  "compilerOptions": {
    "resolveJsonModule": true,
    "types": ["node", "jest", "vitest/globals", "rive/globals"],
    "allowJs": true,
    "checkJs": false,
    "esModuleInterop": true,
    "isolatedModules": true,
    "lib": ["esnext"],
    "module": "esnext",
    "moduleResolution": "bundler",
    "noEmit": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "es2020"
  },
  "exclude": [".rive", "build", "coverage", "dist", "node_modules"]
}
